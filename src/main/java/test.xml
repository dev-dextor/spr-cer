<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	classpath:org/springframework/beans/factory/xml/spring-beans-3.0.xsd">



	<bean name="clientServiceProxy" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
		<property name="serviceUrl" value="rmi://localhost:1099/ServiceBean"/>
		<property name="serviceInterface" value="org.devdexter.spr.rmi.plain.MessagingService"/>
	</bean>

</beans>
